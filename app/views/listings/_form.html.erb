
<%= simple_form_for(@listing, html: {multipart: true, class: 'form-vertical'}) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.input :title, placeholder: 'Data Structures and Algorithms'%>
  <%= f.input :edition, placeholder: '1st, 2nd, 3rd, etc.' %>
  <%= f.input :ISBN, label: "ISBN-10", placeholder: 'Digits only', input_html: { maxlength: 10 } %>
  <%= f.input :price, placeholder: 'Digits only', as: :string %>
  <%= f.input :description, placeholder: "Damage, comments, registration codes, etc." %>
  <%= f.input :condition, :collection => Condition::HASH_STATE.sort.map {|k,v| [v,v]}, prompt: 'Choose:'  %>
  <%= f.input :contact, label: "Contact Info", placeholder: "Phone number, email address, preferred time of day, etc." %>
  <strong>Add Image:</strong>
  <%= f.file_field :image, label: "Add image" %><br>
  <div class="actions">
    <%= f.button :submit, class: "btn btn-success" %><hr/>
  </div>
<% end %>
