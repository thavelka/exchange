
<!DOCTYPE html>
<html>
<head>
  <title>Exchange</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <h1 class="shadow-text"><div align="center">Tim Havelka's Secret Diary</div></h1>
  </div>

  <script>
    $(document).ready(function() {
        $('a[href="' + this.location.pathname + '"]').parent().addClass('active');
    });
  </script>
  
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">I am... </a>
      <ul class="nav navbar-nav">
        <li><%= link_to "Buying", root_path %></li>
        <li><%= link_to "Selling", new_listing_path %></li>
        <li><%= link_to "Cooking", "http://www.guyfieri.com/" %></li>
      </ul>
      <div class="col-sm-4">
      <div class="input-group">
  <%= form_tag listings_path, method: 'get', class: 'navbar-form', role: 'search' do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search title or ISBN", class: "form-control"%>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
  <% end %>
</div>
</div>
      
<ul class="nav navbar-nav navbar-right">
  <li><%= link_to "Sign up", register_path %>
    <% if user_signed_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.full_name %> <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "My Profile", current_user.netID%>
          <li><%= link_to "Account Settings", edit_user_registration_path(current_user) %></li>
          <li><%= link_to "My Listings", current_user.netID %></li>
          <li class="divider"></li>
          <li><%= link_to "Log out", logout_path %>
        </ul>
      </li>
    <% else %>
      <li><%= link_to "Sign in", login_path %></li>
    <% end %>
</ul>
</div>
</div>
</nav>


<!--Alert/Notice formatting-->
<div class="container">
  <%= render 'layouts/flash_messages' %>
  <%= yield %>
  </div>

</body>

<footer>
  <div align="center"><em>SkodaSoft 2014</em></div>
</footer>

</html>
